#include<stdio.h>
int main(){
    int num, sum=0;
    printf("Enter negative number then exit the code.\n");
    
    for(; ;){
        printf("Enter your number :- ");
        scanf("%d",&num);
        if(num<0){
            printf("Sum of all number = %d"\n,sum);
            printf("Exite the code.");
            break;
            
            
        }
        sum=sum+num;
    }
    return 0;
}
