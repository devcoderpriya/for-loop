include<stdio.h>

int main(){
    int row;
    printf("enter the row");
    scanf("%d",&row);
    
    
    int i;
    int j;
    
    for(i=1;i<=row;i++)
    {
          
    for(j=1;j<=i;j++){
    printf("* ");
    }
    printf("\n");
    }
    for(i=2;i>=1;i--){
    
    for(j=1;j<=i;j++){
    printf("* ");
    }
    
    printf("\n");
    }
    return 0;
    }
