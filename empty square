#include<stdio.h>
int main()
{
  int row;
  printf("enter the row:-");
  scanf("%d",&row);

  int i,j;
  for(i=1;i<=row;i++)
    {
      for(j=1;j<i;j++)
        {
          if(i==1||i==4||j==1||j==4){
            printf("* ");
          }
          else{
            printf("  ");
          }
        }
      printf("\n");
    }
  return 0;
}
