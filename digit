#include <stdio.h> 
int main() { 
    int number, sum, digit; 
    printf("Enter a number: "); 
    scanf("%d", &number); 
for(;number >= 10;){ 
    sum=0; 
    for(; number > 0; ){ 
        digit = number % 10;  
         sum += digit;         
         number /= 10;   
    } 
     number = sum; 
} 
 printf("The single digit sum is: %d\n", number); 
    return 0;
