#include<stdio.h>

int main()
{
    int row;
    printf("enter the row");
    scanf("%d",&row);
    
    
    int i;
    int j;
    
    for(i=1;i<=row;i++){
    
          for(j=row-i;j>=1;j--){
          printf("  ");
          }
    for(j=1;j<=i;j++){
    printf("* ");
    }
           printf ("\n");
    }
    return 0;
    }
