#include<stdio.h>
  int main()
{
  int row;
  printf("enter the row:-");
  scanf("%d",&row);

  int i,j,k;
   for(i=1;i<=row;i++);
  {
    for(j=1;j<=row-1;j++)
    {
      printf(" ");
    }
    for(k=1;k<=(2*i-1);k++)
    {
      printf("*");
    }
    printf("\n");
  }
  for(i=row-1;i>=1;i--) 
  {
      for(j=1;j<=row-i;j++)
      {
          printf(" ");
      }
      for(k=1;k<=(2*i-1);k++)
      {
          printf("*");
      }
      printf("\n");
  }
    
  return 0;
}
